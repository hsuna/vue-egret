{
	"name": "vue-egret",
	"author": "Hsuna",
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "dist",
		"sourceMap": false,
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"allowJs": false,
		"strict": true,
		// "noUnusedLocals": false,
		"noUnusedParameters": false,
		"noImplicitThis": false,
		// "noImplicitAny": false,
		// "noImplicitReturns": false,
		"declaration": false,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"removeComments": false,
		"strictNullChecks": false,
		"rootDir": ".",
		"paths": {
			"src/*": ["./src/*"]
		}
	},
	"includes": [
		"./types/*"
	],
	"exclude": [
		"dist",
		"build",
		"config",
		"scripts",
		"public",
		"node_modules",
		"libs"
	]
}
